<h1>My bookings</h1>

<% if @bookings.any? %>
  <ul>
  <% @bookings.each.with_index(1) do |booking, index| %>
    <li>Booking#<%= index %> | <%= booking.start_time %> - <%= booking.end_time %>
      <%= link_to booking_path(booking), method: :delete do %>
          <i class="fas fa-trash-alt"></i>
      <% end %>

    </li>
  <% end %>
  </ul>

<% else %>
  <p> You have no bookings to display </p>
<% end %>
