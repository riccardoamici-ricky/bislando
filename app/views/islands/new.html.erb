  <div class="container Create">
    <h1>POST YOUR ISLAND</h1>

    <%= simple_form_for @island do |f| %>
    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :description %>
      <%= f.input :price %>
      <%= f.input :type_of_event %>
      <%= f.input :capacity %>
      <%= f.input :photos, as: :file, input_html: { multiple: true } %>
    </div>
    <div class="form-actions">
      <%= f.submit "POST ISLAND", class: "btn btn-primary" %>
      <% end %>
    </div>

    <br><br><br><br>
  </div>
