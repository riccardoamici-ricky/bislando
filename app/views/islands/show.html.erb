<div class="container-wide">
  <h1 class="title"><%= @island.name %></h1>
  <h6><%= @island.address %></h6>
  <div class="island-and-booking">
    <div class="island-info">
      <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
          <% if @island.photos.attached? %>
            <% @island.photos.each_with_index do |photo, index| %>
              <div class="carousel-item <%= "active" if index == 0 %>">
              <%= cl_image_tag photo.key, :class => "d-block w-100 custom-style", style: "object-fit: contain; object-position: 50% 50%;" %>
              </div>
            <% end %>
          <% end %>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>
    <div class="booking-and-info">
      <div class="island">
        <ul>

          <h2>Party in the heart of <%= @island.name %></h2>
          <li>
            <div class="icons"><i class="fas fa-asterisk"></i></div>
            <%= @island.description %>
          </li>
          <li>
            <div class="icons"><i class="fas fa-dollar-sign"></i></div>
            You can rent this island for <%= @island.price %>â‚¬/day.<br>You will basically become the owner of the island for the duration of your stay.
          </li>
          <li>
            <div class="icons"><i class="fas fa-users"></i></div>
            This island has a capacity of <%= @island.capacity %> people.<br>Follow all safety protocols as directed by local authorities.
          </li>
          <li>
            <div class="icons"><i class="fas fa-shapes"></i></div>
            Your best type of party in <%= @island.name %> is <%= @island.type_of_event %>
          </li>
        </ul>
      </div>
      <div class="booking">
        <%= render "bookings/form_bookings.html.erb" %>
      </div>
    </div>
    <div id="map"
      style="width: 80%; height: 40vh; margin-left: 150px;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>
  <div class="anchor-link">
    <%= link_to "Back to list", '/islands' %>
  </div>
</div>
</div>


