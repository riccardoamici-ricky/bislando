<div class="container">
  <h1>My Islands</h1>

  <% if @islands.any? %>
    <ul>
    <% @islands.each do |island| %>
      <li><%= island.name %>
        <%= link_to edit_island_path(island), method: :get do %>
            <i class="fas fa-pencil-alt"></i>
        <% end %> ||
        <%= link_to island_path(island), method: :delete, data: { confirm: "Are you sure?" } do %>
            <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>
    </ul>

  <% else %>
    <p> You have no islands to display ğŸ˜¢ </p>
    <p> Wanna rent your island with us? </p>
    <%= link_to "Rent your island", '/islands/new', class: "btn btn-success" %>

  <% end %>
</div>

